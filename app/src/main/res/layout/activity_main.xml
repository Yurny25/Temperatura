<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="121dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="536dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="87.5px"
        android:text="@string/conversor_de_unidades_de_temperatura"
        android:textAlignment="center"
        android:textColor="#078322"
        android:textFontWeight="400"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="27dp"
        android:viewportWidth="100"
        android:viewportHeight="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/img_temperatura" />


    <TextView
        android:id="@+id/el_converso"
        android:layout_width="311dp"
        android:layout_height="111dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/el_converso"
        android:textColor="#2F2E2E"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/el_converso" />

    <TextView
        android:id="@+id/valor"
        android:layout_width="37dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-55dp"
        android:layout_marginBottom="-35dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/valor"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_1"
        app:layout_constraintEnd_toStartOf="@+id/rectangle_1" />

</androidx.constraintlayout.widget.ConstraintLayout>



